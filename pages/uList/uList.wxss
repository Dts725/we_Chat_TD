/* pages/uList/uList.wxss */

page, ul {
  width: 100%;
  height: 100%;
}
.scroll-box{
  height: 100%;
}
ul {
  display: block;
  box-sizing: border-box;
  padding: 0.5rem;
}

ul li {
  display:block;
  width: 100%;
  padding: 0.5rem 0;
  border-bottom: 1px solid #ddd;
  color: #555;
}

.box-row {
  display: flex;
  width: 100%;
}

ul li:last-child {
  border-bottom: none;
}

ul li .box-lf {
  flex: 4;
}

ul li .box-rt {
  flex: 8;
  text-align: right;
}

ul li span strong {
  color: #2f92f8;
}
