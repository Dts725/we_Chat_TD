/* pages/register/register.wxss */

.topPic {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding-top: 150rpx;
}

.pic {
	width: 100px;
	height: 100px;
	border-radius: 50%;
}

.form-content {
	margin: 1rem 50rpx 2rem;
}

.form-icon {
	position: absolute;
	top: 50%;
	margin-top: -25rpx;
	height: 50rpx;
	width: 50rpx;
	line-height: 1;
}

.name,
.card,
.phone,
.code {
	display: flex;
	border-bottom: 1px solid #aaa;
}

.icon-wrapper {
	position: relative;
}

.next-btn {
	background-color: #2f92f8;
	border-radius: 60rpx;
	color: #fff;
}

.submit-btn {
	background-color: #2f92f8;
	border-radius: 60rpx;
	color: #fff;
	width: 48%;
	display: inline-block;
}

.submit-btn:last-child {
	float: right;
	background-color: #3cc51f;
}



/************改写weui样式***********************/

.weui-input {
	margin-left: 60rpx;
}

.weui-vcode-btn {
	font-size: 18px;
}

.newBtn {
	color: #aaa;
}



/************************** 顶部拍摄头像 ******************************/

.apr-cards {
	width: 100%;
	box-sizing: border-box;
	padding: 1rem 2rem 0;
	text-align: center;
}

.apr-cards-photo {
	width: 100%;
	display: flex;
	justify-content: center;
	box-sizing: border-box;
	padding: 1rem 0 0;
}

.card-info {
	font-size: 15px;
	color: #888;
	text-align: center;
}

.weui-uploader__input-box {
	/* width: 6rem;
  height: 8rem; */
	margin: 0;
}

.card-img {
	width: 6rem;
	height: 8rem;
	border: 1px solid #ddd;
	border-radius: 0.5rem;
}

.card-img2 {
	width: 8rem;
	height: 8rem;
	border: none;
}



/***************************** 底部选择社区 **********************************/

.communty {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1px solid #aaa;
	box-sizing: border-box;
	padding-left: 2rem;
	color: #666;
}

.communty .comunty-con view{
	border: none;
}