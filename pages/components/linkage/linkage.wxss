/* pages/components/linkage/linkage.wxss */
.linkage-box{
	width:100%;
	height: 100%;
}

.picker-more {
  /* position: absolute; */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #fff;
  z-index: 1000;
  box-sizing: border-box;
}

.picker-more .picker-top-btn {
  position: absolute;
  width: 100%;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  padding: 1rem;
  box-sizing: border-box;
  color: green;
}

.picker-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}