/* pages/qrCode/qrCode.wxss */

page {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qc {
  width: 80%;
  /* position: absolute;
  top: 15%;
  left: 10%; */
}

.row {
  display: flex;
  align-items: center;
  padding: 0.3rem;
  border-bottom: 1px solid #ddd;
}

.row:last-child {
  border-bottom: none;
}

/* 中间活动信息部分  */

.adl-info {
  box-sizing: border-box;
  padding: 0.5rem;
  font-size: inherit;
  border: 1px solid #ddd;
  border-radius: 0.3rem;
}

/* 活动信息的左边按钮  */

.adl-info-lf {
  flex: 6;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #2f92f8;
}

.adl-info-lf image {
  width: 80%;
}

/* 活动信息的右边  */

.adl-info-rt {
  flex: 6;
  box-sizing: border-box;
  padding-left: 0.8rem;
  border-left: 1px solid #ddd;
}
