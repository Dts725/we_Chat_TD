/* pages/components/qrcode/qrcode.wxss */

page, .qr {
  width: 100%;
  height: 100%;
}

.qr {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.qr-con {
  text-align: center;
  position: relative;
  z-index: 10;
}

.qr-con canvas {
  width: 260px;
  height: 260px;
  position: relative;
  z-index: 100;
}

/* 标题 */

.qr-title {
  font-size: 1.2rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

/* 简介 */

.qr-con-info {
  color: #2f92f8;
}

/** 中间的图片 */

.qr-con image {
  width: 100px;
  height: 100px;
  position: absolute;
  z-index:200;
  top: 80px;
  left: 80px;
}
